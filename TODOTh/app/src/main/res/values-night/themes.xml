<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TODOTh" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/point</item>
        <item name="colorPrimaryVariant">@color/base</item>
        <item name="colorOnPrimary">@color/base</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/point</item>
        <item name="colorSecondaryVariant">@color/point</item>
        <item name="colorOnSecondary">@color/base</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">@color/base</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/point</item>
        <item name="colorPrimaryVariant">@color/base</item>
        <item name="colorOnPrimary">@color/base</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/point</item>
        <item name="colorSecondaryVariant">@color/point</item>
        <item name="colorOnSecondary">@color/base</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>